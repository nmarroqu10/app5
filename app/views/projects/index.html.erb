
  <div class="p-5 text-center bg-white">
    <h4 class="mb-3">
        Hello, welcome to my projects website.
        <br>Here are all of my Projects!</br>
        Thank you for visiting.
    </h4>
  </div>
<div class="card">
  
  <div class="card-header">
    
    <h2 class='card-title justify-content-between mb-4'>
      Projects
    </h2>

  
  </div>
  
  <div class="card-body">
    <table style="width:35%;">
      <thead>
        <tr>
          <th>Title</th>
          <th>Description</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @projects.each do |project| %>
        
          <tr>
            <td><%= project.title %></td>
            <td><%= project.description %></td>
            <td style="width:5%;"><%= link_to 'Show', project %></td>
            <td style="width:5%;"><%= link_to 'Edit', edit_project_path(project) %></td>
            <td style="width:5%;"><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table> 
  </div>
  
  <div class="card-footer">
    <td style="height:1000px"><%= link_to 'New Project', new_project_path, class: 'btn btn-primary' %></td>
  </div> 
</div>








